/**index.wxss**/
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}
.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #5f5f5f27;
}
.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
  height: 100rpx;
}

.tab-text {
  font-size: 16rpx;
  line-height: 35rpx;
  color: #A9A9A9;
}

.iconPath {
  width:34rpx;
  height: 32rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  /* border-bottom: 1px solid #eee; */
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 75rpx;
  text-align: center;
  color: black;
  flex: 1;
  /* border-bottom: 1px solid red; */
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
