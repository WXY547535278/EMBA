/* pages/component/index/dynamicInfo/dynamicInfo.wxss */
@import "/wxParse/wxParse.wxss";
page {
  background-color: #F0F0F0;
}
/* 修改富文本框中文字图片居中的样式 */
.ql-align-center {
  text-align: center;
}
.ql-align-right {
  display: flex;
  justify-content: flex-end;
}
.contain {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
}
.title {
  width: 740rpx;
  min-height: 80rpx;
  margin-top: 20rpx;
  background-color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content {
  width: 740rpx;
  min-height: 1000rpx;
  margin-top: 20rpx;
  background-color: #FFFFFF;
  color: gray;
  font-size: 20rpx;
  border-radius: 10rpx;
  display: flex;
  padding-top: 4rpx;
  flex-direction: column;
  position: relative;
}
.content text {
  margin: 20rpx 40rpx;
  font-size: 30rpx;
}
.download {
  border: 1px solid rgb(0, 153, 255);
  border-radius: 6rpx;
  background-color: rgb(0, 153, 255);
  font-size: 40rpx;
  color: white;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}
.look {
  border: 1px solid rgb(0, 153, 255);
  border-radius: 6rpx;
  background-color: rgb(0, 153, 255);
  font-size: 40rpx;
  color: white;
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
}