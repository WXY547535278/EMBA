.content {
  background-color: #FFFFFF;
  width: 100%;
  height: 100%;
}
/*切换栏*/
.swiper-tab {
  height: 58rpx;
  width: 100%;
  line-height: 80rpx;
  background: #FFFFFF;
  color:#747474 ;
  display: flex;
  position: fixed;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 26rpx;
}
 
.swiper-tab-list {
  box-sizing: border-box;
  margin: 0 60rpx;
  padding: 0 28rpx;
  height: 70rpx;
  font-size: 20rpx;
  border-bottom: 4rpx solid white;
}
 
.on {
  border-bottom: 4rpx solid #006CFF;
  color: #006CFF;
}
page {
  background-color: #FFFFFF;
}
swiper-item {
  overflow: scroll;
}
/* 视屏区域 */
.swiper-box .information {
  width: 100%;
  height: 680rpx;
  background-color:#FFFFFF;
  margin-top: 80rpx;
}
.swiper-box .info-content {
  width: 668rpx;
  height: 130rpx;
  border-bottom: 2rpx solid rgba(198, 198, 198, 0.219);
  margin-left: 44rpx;
  margin-top: 14rpx;
  padding-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.swiper-box .info-content:last-child {
  border: 0;
}
.swiper-box .info-image {
  width: 208rpx;
  height: 130rpx;
  float: left;
  margin-bottom: 26rpx;
}
.swiper-box .info-R {
  float: left;
  margin-left: 20rpx;
}
.swiper-box .info-L {
  float: right;
}
.swiper-box .info-title {
  font-size: 18rpx;
  font-weight: 600;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.swiper-box .info-info {
  font-size: 16rpx;
  margin-top: 18rpx;
  color: #8A8A8A;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 438rpx;
  height: 60rpx;
}
.swiper-box .video-icon {
  float: left;
  width: 22rpx;
  height: 16rpx;
  margin-top: 12rpx;
}
.swiper-box .video-watch {
  float: left;
  font-size: 16rpx;
  color: #8A8A8A;
  margin-left: 4rpx;
  margin-top: 10rpx;
}
.swiper-box .video-play {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 40rpx;
  left: 86rpx;
}

/* 底部区域 */
.footer {
  width: 100%;
}
.footer-img {
  width: 306rpx;
  height: 78rpx;
  margin: 0 auto;
  margin-top: 52rpx;
  margin-left: 208rpx;
}
.footer-text {
  font-size: 24rpx;
  color: #B8B6B6;
  display: flex;
  justify-content: flex-start;
  padding-top: 24rpx;
  padding-bottom: 38rpx;
  margin-bottom: 70rpx;
  margin-left: 176rpx;
}
.f-text:first-child {
  margin-left: 0;
}
.f-text {
  margin-left: 64rpx;
}